{
  "expo": {
    "name": "PerkUP Client",
    "slug": "perkup-client",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "perkup-client",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.perkup.client",
      "infoPlist": {
        "NSCameraUsageDescription": "Cette app utilise l'appareil photo pour scanner les QR codes",
        "NSLocationWhenInUseUsageDescription": "Cette app utilise votre position pour trouver les partenaires à proximité"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Permettre à PerkUP d'utiliser votre appareil photo pour scanner les QR codes."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permettre à PerkUP d'accéder à votre position pour trouver les partenaires proches."
        }
      ],
      "expo-barcode-scanner",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
