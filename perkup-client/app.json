{
  "expo": {
    "name": "PerkUP Client",
    "slug": "perkup-client",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "perkup-client",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.perkup.client",
      "infoPlist": {
        "NSCameraUsageDescription": "Cette app utilise l'appareil photo pour scanner les QR codes",
        "NSLocationWhenInUseUsageDescription": "Cette app utilise votre position pour trouver les partenaires à proximité"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Permettre à PerkUP d'utiliser votre appareil photo pour scanner les QR codes."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permettre à PerkUP d'accéder à votre position pour trouver les partenaires proches."
        }
      ],
      "expo-barcode-scanner",
      "expo-secure-store",
      "expo-notifications"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "afcd2014-beb0-4337-8430-297e8a6ff492"
      }
    },
    "owner": "anis144"
  }
}
